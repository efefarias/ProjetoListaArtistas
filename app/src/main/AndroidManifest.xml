<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.projeto.projetolistajogos">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".PessoaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_laucher_art"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PessoasActivity"
            android:theme="@style/AppTheme.NoTitle"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetalhePessoaActivity"
            android:label="@string/detalhe_jogo"
            android:parentActivityName=".PessoasActivity">
            <meta-data android:name="parentActivityName"
                android:value=".PessoasActivity"/>

        </activity>
    </application>

</manifest>

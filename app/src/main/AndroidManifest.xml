<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.projeto.projetolistaartistas">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name=
        "android.permission.INTERNET" />
    <uses-permission android:name=
        "android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name=
        "android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name=
        "com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:name="br.com.projeto.projetolistaartistas.PessoaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_laucher_art"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.com.projeto.projetolistaartistas.PessoasActivity"
            android:theme="@style/AppTheme.NoTitle"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.projeto.projetolistaartistas.DetalhePessoaActivity"
            android:label="@string/detalhe_pessoa"
            android:parentActivityName="br.com.projeto.projetolistaartistas.PessoasActivity">
            <meta-data android:name="parentActivityName"
                android:value=".PessoasActivity"/>

        </activity>

        <activity android:name="br.com.projeto.projetolistaartistas.AvaliacaoActivity"
            android:label="Avaliação Artista"
            android:parentActivityName="br.com.projeto.projetolistaartistas.PessoasActivity">
            <meta-data android:name="parentActivityName"
                android:value=".PessoasActivity"/>

        </activity>

        <activity android:name="br.com.projeto.projetolistaartistas.MapaActivity"
            android:label="Mapa Artista"
            android:parentActivityName="br.com.projeto.projetolistaartistas.PessoasActivity">
            <meta-data android:name="parentActivityName"
                android:value=".PessoasActivity"/>

        </activity>

        <meta-data android:name=
            "com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDzGiU5rcNf8k-WbtN927xDntrvcf-bBMg" />
    </application>

</manifest>

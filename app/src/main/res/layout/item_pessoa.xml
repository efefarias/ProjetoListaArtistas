<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="112dp"
        android:layout_height="168dp"
        android:id="@+id/img_capa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/txt_resumo"/>
        <!--android:layout_below="@+id/txt_nome" -->

 <LinearLayout
     android:id="@+id/linear1"
     android:layout_width="match_parent"
     android:layout_height="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txt_nome"
        android:layout_marginLeft="8dp"/>

 </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textSize="14dp"
        android:layout_marginTop="-24dp"
        android:id="@+id/txt_estado_cidade"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/linear1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="14dp"
        android:id="@+id/txt_bio"
        android:layout_marginLeft="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="@+id/img_capa"
        android:layout_below="@+id/txt_estado_cidade"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        android:id="@+id/txt_resumo"
        android:layout_marginLeft="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="@+id/img_capa"
        android:layout_below="@+id/txt_bio"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantidade de Votos"
        android:id="@+id/txt_nota"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imgAvalie"
        android:layout_marginLeft="72dp"
        android:layout_toRightOf="@+id/img_capa"
        android:layout_toEndOf="@+id/img_capa"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="7.5/10"
        android:id="@+id/txt_quantidade_votos"
        android:layout_below="@+id/txt_nota"
        android:layout_alignLeft="@+id/txt_nota"
        android:layout_alignStart="@+id/txt_nota"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/img_capa"
        android:layout_below="@+id/imgAvalie"
        android:src="@android:drawable/btn_star_big_on" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imgAvalie"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="28dp"
        android:layout_alignTop="@+id/img_capa"
        android:layout_toRightOf="@+id/img_capa"
        android:layout_toEndOf="@+id/img_capa"
        android:src="@android:drawable/btn_star_big_off"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sua nota: 8"
        android:layout_marginTop="14dp"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/imgAvalie"
        android:layout_toRightOf="@+id/imgAvalie"
        android:layout_toEndOf="@+id/imgAvalie"/>

</RelativeLayout>
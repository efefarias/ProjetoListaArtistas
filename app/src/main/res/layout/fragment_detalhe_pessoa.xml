<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3a3131">

        <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3a3131">

            <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3a3131"
            tools:context="br.com.projeto.projetolistajogos.DetalheJogoFragment"
            android:clickable="false">

                <TextView
                android:id="@+id/text_jogo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:textColor="#ffffff" />

            </RelativeLayout>
        </ScrollView>

    <ImageView
        android:layout_width="112dp"
        android:layout_height="168dp"
        android:id="@+id/img_capa"
        android:layout_margin="8dp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_jogos"
        android:layout_width="112dp"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:background="#3a3131">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_obras"
        android:layout_marginTop="180dp">
    </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_favorito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:tint="@android:color/white"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_favorito2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_off"
        app:fabSize="normal"
        android:tint="@android:color/white"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="88dp"/>
</FrameLayout>



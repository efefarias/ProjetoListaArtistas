<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="150dp"
        android:id="@+id/txt_pesquisa_artista"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:text="Pesquisa de Artistas"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spn_pesquisa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:textSize="5dp"
        android:gravity="center"
        android:layout_below="@id/txt_pesquisa_artista"
        android:layout_centerHorizontal="true"
        style="style/Widget.Holo.TextView.SpinnerItem">
    </android.support.v7.widget.AppCompatSpinner>

    <EditText
        android:id="@+id/edt_pesquisa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spn_pesquisa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textAlignment="center"
        android:gravity="center"
        android:hint="Pesquise por algo..."
        />

    <Button
        android:id="@+id/btn_ok_pesquisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/edt_pesquisa"
        android:text="OK"
        android:layout_centerHorizontal="true"></Button>

</RelativeLayout>